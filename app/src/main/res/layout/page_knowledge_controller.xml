<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/back_icon"
            android:text="@string/back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/black_round_bg"
            android:gravity="center">

            <View
                android:id="@+id/white_line"
                android:layout_width="145dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/white_line"/>

            <TextView
                android:id="@+id/fre_class_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/white_line"
                android:background="@drawable/knowledge_icon_selector"
                android:layout_marginRight="-2dp"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/fre_class"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/at_class_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/knowledge_icon_selector"
                android:text="@string/at_class"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/after_class_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/white_line"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/knowledge_icon_selector"
                android:gravity="center"
                android:text="@string/after_class"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>