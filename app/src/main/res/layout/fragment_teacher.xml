<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:id="@+id/leftbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_lesson_sample"
            style="@style/ColorButton"
            android:background="@drawable/button_1_selector"
            android:text="查看学案"/>

        <Button
            android:id="@+id/start_lesson"
            style="@style/ColorButton"
            android:background="@drawable/button_2_selector"
            android:text="@string/class_begin"/>

        <Button
            android:id="@+id/btn_student_wrong"
            style="@style/ColorButton"
            android:background="@drawable/button_3_selector"
            android:text="学生错题集"/>

        <Button
            android:id="@+id/btn_static"
            style="@style/ColorButton"
            android:background="@drawable/button_4_selector"
            android:text="学情数据"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/bar_answers_pressed" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rightbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/ask_btn"
            style="@style/ColorButton"
            android:background="@drawable/button_5_selector"
            android:enabled="false"
            android:text="提问"/>

        <Button
            android:id="@+id/result_btn"
            style="@style/ColorButton"
            android:background="@drawable/button_6_selector"
            android:enabled="false"
            android:text="提问结果"/>

    </LinearLayout>

</LinearLayout>