<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="12dp"
    android:paddingRight="25dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/resource_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">
        <TextView
            android:id="@+id/ppt_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:enabled="false"
            android:textColor="@color/resource_title_selector"
            android:text="@string/ppt_u"/>
        <TextView
            android:id="@+id/micro_course_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/resource_title_selector"
            android:text="@string/micro_course"/>
        <TextView
            android:id="@+id/question_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/resource_title_selector"
            android:text="@string/exercises"/>
        <TextView
            android:id="@+id/word_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/resource_title_selector"
            android:text="@string/documents"/>
        <TextView
            android:id="@+id/image_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/resource_title_selector"
            android:text="@string/photo"/>
        <TextView
            android:id="@+id/upload_file_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/group_name"
            android:text="@string/upload_from_local_title"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_bar_background"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:id="@+id/resource_level_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></Spinner>

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:columnWidth="250dp"
        android:verticalSpacing="30dp"
        android:numColumns="6"
        android:scrollbars="none" />
</LinearLayout>