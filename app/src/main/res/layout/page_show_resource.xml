<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/resource_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:weightSum="5">

        <TextView
            android:id="@+id/ppt_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/ppt_u"
            android:textColor="@color/resource_title_selector"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/micro_course_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/micro_course"
            android:textColor="@color/resource_title_selector"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/question_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/exercises"
            android:textColor="@color/resource_title_selector"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/word_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/documents"
            android:textColor="@color/resource_title_selector"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/image_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/photo"
            android:textColor="@color/resource_title_selector"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/upload_file_resource_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/upload_from_local_title"
            tools:visibility="visible"
            android:textColor="#78E7E0"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_bar_background" />


    <TextView
        android:id="@+id/tv_spinner"
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableRight="@mipmap/ic_down"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="left|center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:background="@drawable/bg_spinner"
        android:textSize="@dimen/text_size_12"
        android:text="@string/lbl_all"
        android:textColor="@color/resource_name" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1" />

</LinearLayout>