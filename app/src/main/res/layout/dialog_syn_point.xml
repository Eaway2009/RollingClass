<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_radius5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_17"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_6"
        android:text="请选择要同步的知识点"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cancel_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_5"
            android:text="取消"
            android:textColor="@color/frame_cancel_text"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ok_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_5"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</LinearLayout>