<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/class_page_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/class_page">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/class_page_icon"
                android:gravity="center"
                android:text="@string/learning_class"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/class_started_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/class_warning"
                android:gravity="center"
                android:text="@string/class_started_warning"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/knowledge_page_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/class_page_view"
            android:background="@drawable/learning_page">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/learning_page_icon"
                android:gravity="center"
                android:text="@string/learning_seft"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statics_page_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/knowledge_page_view"
            android:layout_alignBottom="@+id/class_page_view"
            android:background="@drawable/statistics_page">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/statistics_page_icon"
                android:gravity="center"
                android:text="@string/statistics_title"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>