<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/knowledge_text"
        android:drawableLeft="@drawable/task_title_icon"
        android:drawablePadding="12dp"
        android:textSize="18sp"
        android:paddingBottom="6dp"
        android:paddingTop="8dp"
        tools:text="预习大纲"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_bar_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">
        <TextView
            android:id="@+id/task_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/knowledge_text"
            android:textSize="14sp"
            tools:text="Give yourself a long-term goal, and then deliberately change who you are by the things that you choose to do.给自己制定一个长期目标，然后可以通过去做那些你选择要做的事情来改变自己。"/>

        <TextView
            android:id="@+id/task_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/delete"
            android:textColor="@color/knowledge_edit_text"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/task_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/task_edit_icon"
            android:drawablePadding="4dp"
            android:text="@string/edit"
            android:layout_marginLeft="15dp"
            android:textColor="@color/knowledge_edit_text"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>