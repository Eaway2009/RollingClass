<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/knowledge_text"
        android:drawableLeft="@drawable/task_title_icon"
        android:drawablePadding="12dp"
        android:textSize="18sp"
        android:paddingBottom="6dp"
        android:paddingTop="8dp"
        tools:text="预习大纲"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_bar_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">

        <LinearLayout
            android:id="@+id/upload_file_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|left"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:padding="36dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/task_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/delete"
            android:drawableLeft="@drawable/task_delete"
            android:drawablePadding="6dp"
            android:textColor="@color/knowledge_edit_text"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/task_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:drawableLeft="@drawable/task_edit_icon"
            android:drawablePadding="6dp"
            android:text="@string/edit"
            android:layout_marginLeft="15dp"
            android:textColor="@color/knowledge_edit_text"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>